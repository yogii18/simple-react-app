pipeline{
    agent any
    tools{nodejs "nodejs"}
    
    stages{
        stage('pull'){
            steps{
                sh 'git clone https://github.com/yogii18/simple-react-app.git'
            }
        }
        
        stage('start'){
            steps{
                sh 'npm run start'
            }
        }
        
        stage('init'){
            steps{
                sh 'npm init'
            }
        }
        
        stage('build'){
            steps{
                sh 'npm run build'
            }
        }
        
        stage('install'){
            steps{
                sh 'npm i node@lts'
            }
        }
        
        
        stage('test'){
            steps{
                sh 'npm test'
            }
        }
    }
}
